{
  "name": "ecoleta-api",
  "version": "0.1.0",
  "description": "API for Ecoleta - Waste Collection Marketplace",
  "keywords": [
    "next-level-week",
    "next-level-week-1",
    "rocketseat",
    "rocketseat-nlw",
    "node",
    "typescript",
    "express",
    "celebrate",
    "multer",
    "sqlite",
    "knex"
  ],
  "author": "Lucas Guima",
  "license": "GPL-3.0",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc",
    "copy:assets": "cp -rv ./uploads/categories/ build/uploads/",
    "build": "npm run tsc && npm run copy:assets",
    "start": "node build/src/server.js",
    "dev": "ts-node-dev --transpileOnly --ignore-watch node_modules src/server.ts",
    "migrate": "knex --knexfile knexfile.ts migrate:latest",
    "seed": "knex --knexfile knexfile.ts seed:run"
  },
  "dependencies": {
    "celebrate": "^12.1.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "knex": "^0.21.1",
    "multer": "^1.4.2",
    "sqlite3": "^4.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/hapi__joi": "^17.1.2",
    "@types/multer": "^1.4.3",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.9.3"
  },
  "engines": {
    "node": "12.x"
  }
}
